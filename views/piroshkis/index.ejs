<%- include('../partials/header') %>

<h1>All Piroshkis</h1>

<a class="btn btn-primary" href="/piroshkis/new">New</a>
    <h1>Piroshkis</h1>
    <% for (key in piroshkis) {%>
        <hr>
        <h3><%= piroshkis[key].name %></h3>
        <h4><%= piroshkis[key].filling %></h4>
        <p><%= piroshkis[key].size %></p>
        <a href='/piroshkis/<%= key %>'><button class="btn btn-info">Show</button></a>
        <br>
        <br>
        <a href='/piroshkis/<%= key %>/edit'><button class="btn btn-success">Edit</button></a>
        <br>
        <br>
        <form method="POST" action="/piroshkis/<%= key %>?_method=DELETE">
        <button class="delete btn btn-danger" type="submit">Delete</button>
        </form>
        <hr>
        <br>
    <% } %>

<%- include('../partials/footer') %>